<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="baseLayout" template="/jsp/tiles/layout.jsp">
        <put-attribute name="title" value="Template" cascade="true"/>
        <put-attribute name="header" value="/jsp/tiles/header.jsp"/>
        <put-attribute name="footer" value="/jsp/tiles/footer.jsp"/>
    </definition>

    <definition name="index" extends="baseLayout">
        <put-attribute name="title" value="Main page" cascade="true"/>
        <put-attribute name="body" value="/jsp/example/index.jsp"/>
    </definition>

    <definition name="demo" extends="baseLayout">
        <put-attribute name="title" value="Demo feature" cascade="true"/>
        <put-attribute name="body" value="/jsp/example/demo.jsp"/>
    </definition>

</tiles-definitions>